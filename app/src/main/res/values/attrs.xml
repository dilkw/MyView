<?xml version="1.0" encoding="utf-8"?>
<!--自定义属性-->
<resources>
    <!--name 自定义View的名字-->
    <declare-styleable name="TextView">
        <attr name="myText" format="string"/>
        <attr name="myTextColor" format="color"/>
        <!--字体大小使用dimension为单位-->
        <attr name="myTextSize" format="dimension"/>
        <attr name="myMaxLength" format="integer"/>
        <!--背景可以是图片或是纯颜色-->
        <attr name="myBackground" format="reference|color"/>

        <!--自定义View输入类型-->
        <attr name="myInputType">
            <enum name="number" value="1"></enum>
            <enum name="text" value="2"></enum>
            <enum name="password" value="3"></enum>
        </attr>
    </declare-styleable>


    <declare-styleable name="MyImageView">
        <attr name="mySrc" format="reference"/>
    </declare-styleable>

    <declare-styleable name="IdentifyCodeView">
        <attr name="identifyCode_width" format="float"/>
        <attr name="identifyCode_height" format="float"/>
    </declare-styleable>

</resources>